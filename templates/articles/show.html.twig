{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<h1>Descriptif</h1>

	<table class="table">
		<tbody>
			{% if is_granted ("ROLE_ADMIN") %}
				{# Si le role admin est actif, les utilisateurs normaux 
												ne pourrons pas voir les ID's des articles #}
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<td>{{ article.name }}</td>
			</tr>
			<tr>
				<th>Description et prix</th>
				<td>{{ article.description }}</td>
				<td>{{ article.price }}
					â‚¬</td>
			</tr>
			<tr>
				<th><img src="{{ asset('assets/upload_directory/' ~ article.images) }}" alt={{article.name}}></th>

			</tr>
		</tbody>
	</tbody>
</table>

<a href="{{ path('app_articles_index') }}">Retour aux articles</a>
{% if is_granted("ROLE_ADMIN") %}
	<a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>
{% endif %}
