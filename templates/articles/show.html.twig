{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ article.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ article.description }}</td>
			</tr>
			<tr>
				<th>Images</th>
				<td><img src="{{ path('articles_image', {'images': article.images}) }}"/></td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_articles_index') }}">Retour aux articles</a>
	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>
	{% endif %}
	{{ include('articles/_delete_form.html.twig') }}
{% endblock %}
